@using Chatverse.UI.ViewModels.Users;

@{
    ViewData["Title"] = "AccountInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GetAccountInformationViewModel
<div class="main-content bg-lightblue theme-dark-bg right-chat-active">

    <div class="middle-sidebar-bottom">
        <div class="middle-sidebar-left">
            <div class="middle-wrap">
                <div class="card w-100 border-0 bg-white shadow-xs p-0 mb-4">
                    <div class="card-body p-4 w-100 bg-current border-0 d-flex rounded-3">
                        <a href="/Settings/Properties" class="d-inline-block mt-2"><i class="ti-arrow-left font-sm text-white"></i></a>
                        <h4 class="font-xs text-white fw-600 ms-4 mb-0 mt-2">Account Details</h4>
                    </div>
                    <div class="card-body p-lg-5 p-4 w-100 border-0 ">
                        <div class="row justify-content-center">
                            <div class="col-lg-4 text-center">
                                <figure class="avatar ms-auto me-auto mb-0 mt-2 w100"><img src="~/@Model.ProfilePicture" alt="image" class="shadow-sm rounded-3 w-100"></figure>
                                <h2 class="fw-700 font-sm text-grey-900 mt-3">@Model.Fullname</h2>
                                <h4 class="text-grey-500 fw-500 mb-3 font-xsss mb-4">@Model.Username</h4>
                                <!-- <a href="#" class="p-3 alert-primary text-primary font-xsss fw-500 mt-2 rounded-3">Upload New Photo</a> -->
                            </div>
                        </div>
                        @if(Model is not null)
                        {
                            <form method="post" asp-action="AccountInformation" asp-controller="Users" enctype="multipart/form-data">


                                <div class="row">
                                    <div class="col-lg-12 mb-3">
                                        <div class="form-group">
                                            <label class="mont-font fw-600 font-xsss">Fullname</label>
                                            <input type="text" name="Fullname" class="form-control" value="@Model.Fullname">
                                        </div>
                                    </div>
                                    <div class="col-lg-6 mb-3">
                                        <div class="form-group">
                                            <label class="mont-font fw-600 font-xsss">Username</label>
                                            <input type="text" name="Username" class="form-control" value="@Model.Username">
                                        </div>
                                    </div>

                                    <div class="col-lg-6 mb-3">
                                        <div class="form-group">
                                            <label class="mont-font fw-600 font-xsss">Email</label>
                                            <input type="email" name="Email" class="form-control" value="@Model.Email">
                                        </div>
                                    </div>
                                </div>


                                <div class="row">

                                    <div class="col-lg-6 mb-3">
                                        <div class="form-check form-switch">
                                            <input name="Privicy"  asp-for="@Model.Privicy" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                            <label class="mont-font fw-600 font-xsss form-check-label" for="flexSwitchCheckDefault">Privicy</label>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 mb-3">
                                        <label for="fileInput" class="upload-button">
                                            <i class="fas fa-upload"></i> Upload Picture
                                        </label>
                                        <input name="ProfilePicture" type="file" id="fileInput" style="display: none;">
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-lg-12 mb-3">
                                        <label class="mont-font fw-600 font-xsss">About</label>
                                        <textarea name="About" value="@Model.About" class="form-control mb-0 p-3 h100 bg-greylight lh-16" rows="5" spellcheck="false"></textarea>
                                    </div>
                                </div>


                                <div class="row">

                                    <div class="col-lg-12">
                                        <button type="submit" class="bg-current text-center text-white font-xsss fw-600 p-3 w175 rounded-3 d-inline-block">Save</button>
                                    </div>
                                </div>

                            </form>

                        }
                    </div>
                </div>
                
            </div>
        </div>

    </div>
</div>
