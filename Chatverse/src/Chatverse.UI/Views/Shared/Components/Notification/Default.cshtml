@using Chatverse.UI.ViewModels.Notifications;
@{
    List<GetUserNotificationViewModel> notifications = ViewBag.Notifications as List<GetUserNotificationViewModel>;
}

<div class="dropdown-menu dropdown-menu-end p-4 rounded-3 border-0 shadow-lg" aria-labelledby="dropdownMenu3">
    <h4 class="fw-700 font-xss mb-4">Notification</h4>

    @if (notifications is null)
    {
        <div class="card bg-transparent-card w-100 border-0 ps-5 mb-3">
            There aren't any notifications
        </div>
    }
    else
    {
        @foreach (var notification in notifications)
        {
            <div class="card bg-transparent-card w-100 border-0 ps-5 mb-3">
                <img src="~/chatverse/uitheme.net/sociala/images/user-8.png" alt="user" class="w40 position-absolute left-0">
                <h5 class="font-xsss text-grey-900 mb-1 mt-0 fw-700 d-block">@notification.RequestFriend <span class="text-grey-400 font-xsssss fw-600 float-right mt-1">3 min</span></h5>
                <h6 class="text-grey-500 fw-500 font-xssss lh-4">@notification.Content</h6>
            </div>
        }

        <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-outline-primary">Show More</button>
        </div>
    }
</div>
